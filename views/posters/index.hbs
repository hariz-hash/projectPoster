{{#extends 'base'}}

{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>title</th>
            <th>cost</th>
            <th>Description</th>
            <th>Date</th>            
            <th>Stock</th>
            <th>Height</th>
            <th>Width</th>
            <th>Categories</th>
            <th>Tags</th>
        </tr>

    </thead>
    <tbody>
        {{#each posters}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.title}}
                </td>
                <td>
                    {{this.cost}}
                </td>
                <td>
                    {{this.description}}
                </td>
                <td>
                    {{this.date}}
                </td>
                 <td>
                    {{this.stock}}
                </td>
                 <td>
                    {{this.height}}
                </td>
                 <td>
                    {{this.width}}
                </td>
                <td>{{this.mediaProperty.name}}</td>
                <td>
               
                    <span class="badge bg-primary">{{this.tags}}</span>
              
            </td>
            <td>
                <a href="/posters/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/posters/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}